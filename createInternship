openapi: 3.0.0
info:
  title: Система Стажировок OpenAPI спецификация
  version: 1.0.0
servers:
  - url: http://internships.digitalleague/api/v1/
    description: Dev server
tags:
  - name: Internships
    description: Операции со Стажировками

paths:
  /internships:
    post:
      summary: Метод создания Стажировки
      tags:
        - Internships
      operationId: createInternship
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  example: Системная аналитика
                reqruitmentFirstDate:
                   type: string
                   format: date
                   example: "2021-01-30"
                reqruitmentLastDate:
                    type: string
                    format: date
                    example: "2021-01-30"
                startDate:
                  type: string
                  format: date
                  example: "2021-01-30"
                finishDate:
                  type: string
                  format: date
                  example: "2021-01-30"
                description:
                  type: string
                  example: Стажировка такого-то блока
      responses:
        '201':
          description: Internship created
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/internship'
        '400':
          description: Invalid parameter values
        '403':
          description: Don't have permission to perform this operation

components:
  schemas:
    internship: #стажировка
      type: object
      required:
        - name
        - reqruitmentFirstDate
        - reqruitmentLastDate
        - startDate
        - finishDate
        - status
        - recrStatus
      properties:
        internship_id:
          type: integer
        name:
          type: string
          example: ИТ-анализ
        status:
          type: string
          enum:
            - future
            - in progress
            - archived
          description: Состояние стажировки
        reqruitmentFirstDate:
          type: string
          format: date
        reqruitmentLastDate:
          type: string
          format: date
        startDate:
          type: string
          format: date
        finishDate:
          type: string
          format: date
        description:
          type: string
          example: Стажировка такого-то блока
        recrStatus:
          type: string
          enum:
            - not_possible
            - awaiting
            - in progress
            - stopped
    internships: #стажировки
      type: array
      items:
        $ref: '#/components/schemas/internship'
